# AD7156 capacitance converter configuration options

# Copyright (c) 2023 Sensorfy B.V.
# SPDX-License-Identifier: Apache-2.0

menuconfig AD7156
	bool "AD7156 Capacitance Converter"
	default y
	depends on DT_HAS_ADI_AD7156_ENABLED
	select I2C
	help
	  Enable the driver for Analog Devices Ultralow Power
	  2-Channel Capacitance Converter

if AD7156

choice
	prompt "Trigger mode"
	default AD7156_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config AD7156_TRIGGER_NONE
	bool "No trigger"

config AD7156_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select AD7156_TRIGGER

config AD7156_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select AD7156_TRIGGER

endchoice

config AD7156_TRIGGER
	bool

config AD7156_THREAD_PRIORITY
	int "Thread priority"
	depends on AD7156_TRIGGER_OWN_THREAD && AD7156_TRIGGER
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config AD7156_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on AD7156_TRIGGER_OWN_THREAD && AD7156_TRIGGER
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # AD7156
